<!--pages/logs/logs.wxml-->
<!-- tab栏flex布局 -->
<view class='float-box'>  
      <button class='weui-badge' style="background-color:#00a381" bindtap="powerDrawer" data-statu="open">{{datename}}</button>
      <button class='weui-badge' style="background-color:#00a381" bindtap='showWaitlist' > 教室类型</button>
      <button class='weui-badge' style="background-color:#00a381" bindtap='showHis' >座位数</button>
 </view>  

 <view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view>

<!--content-->
<!--使用animation属性指定需要执行的动画-->
<view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">
  <!--drawer content-->
  <view class="drawer_content">
    <view class="drawer_title">
    <view>{{year}}年{{month}}月{{day}}日</view>
    <view>(允许范围){{a1}}.{{a2}}.{{a3}}~{{eyear}}.{{emonth}}.{{eday}}</view>
      </view>
     <picker-view indicator-style="height: 50px;" style="width: 100%; height: 200px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}" style="line-height: 50px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" style="line-height: 50px">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" style="line-height: 50px">{{item}}日</view>
    </picker-view-column>
  </picker-view>

   <view class='modal-btn-wrapper'>
      <view class='cancel-btn' style='color:rgba(7,17,27,0.6)' bindtap='powerDrawer'data-statu="close">取消</view>
      <view class='confirm-btn' style='color:#13b5f5' bindtap='powerDrawer1'data-statu="close" >确定</view>
    </view>
  
  </view>
 </view> 
      